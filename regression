# Independent variable
x <- c(1, 2, 3, 4, 5)

# Dependent variable
y <- c(2, 4, 5, 4, 5)

# Fit a linear model: y = a + b*x
model <- lm(y ~ x)

# Plot the original data points
plot(x, y, pch=19, col="darkgreen", main="Simple Linear Regression",
     xlab="X values", ylab="Y values")

# Add regression line
abline(model, col="blue", lwd=2)

# Print model summary
summary(model)





# Independent variables
x1 <- c(1, 2, 3, 4, 5)
x2 <- c(2, 1, 3, 5, 4)

# Dependent variable
y <- c(5, 6, 7, 10, 11)

# Fit multiple regression: y = a + b1*x1 + b2*x2
model <- lm(y ~ x1 + x2)

# Predictions
pred <- predict(model)

# Plot observed vs predicted
plot(y, pred, pch=19, col="purple", main="Multiple Linear Regression",
     xlab="Observed Y", ylab="Predicted Y")
abline(0, 1, col="red", lwd=2)  # 45-degree line for perfect prediction

# Print summary
summary(model)





# Independent variable
x <- c(1, 2, 3, 4, 5, 6)

# Dependent variable (binary)
y <- c(0, 0, 0, 1, 1, 1)

# Fit logistic regression
model <- glm(y ~ x, family=binomial)

# Predicted probabilities
prob <- predict(model, type="response")

# Plot data points
plot(x, y, pch=19, col="darkgreen", main="Logistic Regression",
     xlab="X values", ylab="Probability")

# Add predicted probabilities
points(x, prob, col="blue", pch=19)

# Add logistic curve
lines(sort(x), prob[order(x)], col="red", lwd=2)
