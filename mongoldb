// 1Ô∏è‚É£ Show all databases
show dbs

// 2Ô∏è‚É£ Create or switch to database "yash"
use yash

// 3Ô∏è‚É£ Show current database
db

// 4Ô∏è‚É£ Create collection "yash"
db.createCollection("yash")

// 5Ô∏è‚É£ Insert one document
db.yash.insertOne({name: "Alice", age: 25})

// 6Ô∏è‚É£ Insert multiple documents
db.yash.insertMany([
  {name: "Bob", age: 30},
  {name: "Charlie", age: 28},
  {name: "David", age: 30},
  {name: "Eve", age: 30}
])

// 7Ô∏è‚É£ Find all documents
db.yash.find()

// ‚úÖ 7.1 Find many with a condition (age = 30)
db.yash.find({age: 30})

// 8Ô∏è‚É£ Find with condition (greater than 25)
db.yash.find({age: {$gt: 25}})

// 9Ô∏è‚É£ Update one document
db.yash.updateOne({name: "Alice"}, {$set: {age: 26}})

// ‚úÖ 9.1 Update many documents (set age = 32 where age is 30)
db.yash.updateMany({age: 30}, {$set: {age: 32}})

// üîü Delete one document
db.yash.deleteOne({name: "Bob"})

// ‚úÖ 10.1 Delete many documents
db.yash.deleteMany({age: 32})

// 11Ô∏è‚É£ Count total documents
db.yash.countDocuments()

// 12Ô∏è‚É£ Drop a collection
// db.yash.drop()   // remove the collection

// 13Ô∏è‚É£ Rename collection "yash" to "yash_renamed"
db.yash.renameCollection("yash_renamed")

// 14Ô∏è‚É£ Create index on "name"
db.yash_renamed.createIndex({name: 1})

// 15Ô∏è‚É£ Drop the database
// db.dropDatabase()  // careful: deletes everything üòÑ
