data = [1, 3, 2, 3, 5, 7, 1, 2]

def hash_func(x): return (x*3+1)%8      # hash â‰¤7
def trailing_zeros(x):
    count=0
    while x!=0 and x%2==0:
        count+=1
        x//=2
    return count

max_zeros=0
print("Element | Hash | Binary | Trailing Zeros")
for x in data:
    h = hash_func(x)
    b = bin(h)[2:]
    tz = trailing_zeros(h)
    print(f"{x:7} | {h:4} | {b:7} | {tz:14}")
    if tz>max_zeros: max_zeros=tz

print("\nEstimated number of distinct elements:", 2**max_zeros)
